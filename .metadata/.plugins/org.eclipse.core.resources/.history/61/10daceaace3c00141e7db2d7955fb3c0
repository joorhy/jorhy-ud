#!/usr/bin/env python
# -*- coding: utf-8 -*-
from framework.CSingleton import CSingleton
from service.logic.CSvcDishStyle import CSvcDishStyle

class CDataStyle(object):
    def __init__(self, code, name, price_add, mount_add):
        self.code = code
        self.name = name
        self.price_add = price_add
        self.mount_add = mount_add

class CDataStyleInfo(CSingleton):
    data_len = 0
    def __repr__(self):
        return '%s' % (self.__class__.__name__)
    
    @staticmethod
    def GetDataLen():
        return CDataStyleInfo.data_len - 2
    
    @staticmethod
    def GetData():
        result = CSvcDishStyle.GetAll()
        data = list()
        for item in result:
            data_item = CDataStyle(item[0], item[1], item[2], item[3])
            data.append(data_item)
            
        CDataStyleInfo.data_len = len(data)
            
        return data
    
    @staticmethod
    def GetId():
        return CSvcDishStyle.GetId()
    
    @staticmethod
    def AddItem(data):
        if isinstance(data, CDataStyle):
            item = [data.code, data.name, data.price_add, data.mount_add]
            CSvcDishStyle.AddItem(item)
            CDataSpecInfo.data_len += 1
            
    @staticmethod
    def DeleteItem(data):
        if isinstance(data, CDataSpec):
            item = [data.code, data.name]
            CSvcDishSpec.DeleteItem(item)
            
    @staticmethod
    def UpdateItem(data):
        if isinstance(data, CDataSpec):
            item = [data.code, data.name, data.price]
            CSvcDishSpec.UpdateItem(item)
